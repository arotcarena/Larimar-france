{% extends 'fr/base.html.twig' %}

{% block title %}Supprimer mon compte{% endblock %}

{% block body %}

    <div class="security" data-controller="formloading">
    
        <h1 class="security-title-small">Suppression de compte</h1>

        <div>Voulez-vous vraiment supprimer votre compte ?</div>

        <form action="{{ path('fr_security_accountDelete') }}" method="POST" >
            <input type="hidden" name="token" value="{{ csrf_token('delete-user') }}"/>
            <div class="submit-group double">
                <button class="form-button no-react security-button" type="submit">
                    <img class="loader form-button-loader" src="/img/icons/loader.png" alt="symbole chargement">
                    <span>Supprimer mon compte</span>
                </button>
                <a class="form-button secondary no-react security-button" href="{{ path('fr_account_index') }}" data-controller="buttonloading">
                    <img class="loader form-button-loader" src="/img/icons/loader.png" alt="symbole chargement">
                    <span>Retour</span>
                </a>
            </div>
        </form>
    </div>

{% endblock %}
