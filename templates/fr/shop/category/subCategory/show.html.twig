{% extends "fr/base.html.twig" %}

{% block title %}{{ subCategory.name }}{% endblock %}

{% block metaTitle %}
    <meta property="og:title" content="{{ subCategory.name }}">
{% endblock %}


{% block javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('productIndex') }}
{% endblock %}

{% block style %}
    {{ parent() }}
    {{ encore_entry_link_tags('productIndex') }}
{% endblock %}


{% block body %}
    <div class="breadcrumb">
        <a href={{ path('home') }} class="breadcrumb-home-link">Accueil</a>
        >
        <a href={{ path('fr_category_show', {slug: category.slug}) }} class="breadcrumb-link">{{ category.name }}</a>
        >
        <span class="breadcrumb-item">{{ subCategory.name }}</span>
    </div>
    <h1 class="product-index-static-title">{{ category.name }} / {{ subCategory.name }}</h1>
    <div id="product-index" data-categoryid="{{ category.id }}" data-subcategoryid="{{ subCategory.id }}">
    </div>
{% endblock %}