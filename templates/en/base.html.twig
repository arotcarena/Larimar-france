<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        {% block viewport %}
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% endblock %}

        {# Référencement #}
            {# balises globales du site #}
            <meta property="og:site_name" content="Larimar France">
            <meta property="og:type" content="website">
            <meta property="og:url" content="https://larimar-france.com{{ app.request.pathInfo }}">

            <meta property="og:image" content="http://larimar-france.com/img/homepage/hero_1.jpg">
            <meta property="og:image:secure_url" content="https://larimar-france.com/img/homepage/hero_1.jpg">
            <meta property="og:image:width" content="1934">
            <meta property="og:image:height" content="1163">
            <meta property="og:image:alt" content="Mains posées sur un rocher, habillées de bracelets et bagues en larimar.">
        
            {# balises qui changent selon les pages #}
            <title>
                {% block title %}Larimar France{% endblock %}
            </title>
            
            {% block metaTitle %}
                <meta property="og:title" content="Larimar France">
            {% endblock %}

            {% block metaDescription %}

                {% set metaDescription = 'Larimar France par Marie-Laure Schira, spécialiste du larimar depuis plus de 24 ans. Découvrez une collection unique de bijoux et accessoires en larimar et autres pierres d\'exception.' %}
                <meta name="description" content="{{ metaDescription }}">
                <meta property="og:description" content="{{ metaDescription }}">
            {% endblock %}

        
        <link rel="icon" href="/img/favicon.png">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Comforter+Brush&family=Montserrat:ital,wght@0,200;0,400;0,500;0,600;1,400;1,600&display=swap" rel="stylesheet">

        {# main js and css entrypoint #}
        {% block javascript %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('enHeader') }}
        {% endblock %}

        {% block style %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('enHeader') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            {% include "en/layouts/_header.html.twig" %}
        {% endblock %}

        {% include "en/layouts/_flashes.html.twig" %}
        
        <div class="{% block pageClass %}page{% endblock %}">
            {% block body %}{% endblock %}
        </div>


        {% block footer %}
            {% include "en/layouts/_footer.html.twig" %}
        {% endblock %}
    </body>
</html>
