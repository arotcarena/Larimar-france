{% extends 'en/base.html.twig' %}

{% block title %}Delete my account{% endblock %}

{% block body %}

    <div class="security" data-controller="formloading">
    
        <h1 class="security-title-small">Account delete</h1>

        <div>Do you really want to delete your account ?</div>

        <form action="{{ path('en_security_accountDelete') }}" method="POST" >
            <input type="hidden" name="token" value="{{ csrf_token('delete-user') }}"/>
            <div class="submit-group double">
                <button class="form-button no-react security-button" type="submit">
                    <img class="loader form-button-loader" src="/img/icons/loader.png" alt="loading symbol">
                    <span>Delete my account</span>
                </button>
                <a class="form-button secondary no-react security-button" href="{{ path('en_account_index') }}" data-controller="buttonloading">
                    <img class="loader form-button-loader" src="/img/icons/loader.png" alt="loading symbol">
                    <span>Cancel</span>
                </a>
            </div>
                
        </form>
    </div>

{% endblock %}
