<div class="form-group {{ name }}-group {% if form_errors(field) %}is-invalid{% endif %}">
    <div class="input-wrapper">
        {{ form_label(field, label) }}
        {{ form_widget(field, {
            attr: {
                class: 'form-control',
                maxlength: '200'
            }
        }) }}
    </div>
    {% if form_errors(field) %}
        <div class="form-error">
            {{ form_errors(field) }}
        </div>
    {% endif %}
</div>